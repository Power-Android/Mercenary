<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_300"

        android:layout_height="@dimen/dp_258"
        android:background="@drawable/bg_gray"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/error"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_265"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_11"
            android:src="@mipmap/error" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"

            android:gravity="center"
            android:text="@string/ShareTask"
            android:textColor="#333333" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_22"
            android:ellipsize="end"
            android:id="@+id/getItemname"
            android:text="佣兵天下甲方与乙方的权利与义务的"
            android:textColor="#25292d" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_12"
            android:id="@+id/Pay_amount"
            android:textColor="#1DA7FF"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/Task_name"
             />

        <Button
            android:layout_width="@dimen/dp_261"
            android:layout_height="@dimen/dp_46"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginBottom="@dimen/dp_22"
            android:background="@drawable/but_shape"
            android:id="@+id/lookdetails"
            android:text="@string/LookDetails"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>
