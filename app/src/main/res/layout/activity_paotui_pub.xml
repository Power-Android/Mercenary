<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.power.mercenary.activity.PubPaotuiActivity">
    <include layout="@layout/item_title_layout"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/concrete">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:padding="15dp">
                <TextView
                    android:id="@+id/view_01"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="任务名称"
                    android:textColor="@color/textColorDrak"/>
                <EditText
                    android:id="@+id/task_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_01"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:hint="请输入任务名称"
                    android:textColorHint="@color/hint_color"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/concrete"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp">
                <TextView
                    android:id="@+id/view_02"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="物品名称"
                    android:textColor="@color/textColorDrak"/>
                <EditText
                    android:id="@+id/goods_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_02"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:hint="请输入物品名称"
                    android:textColorHint="@color/hint_color"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/concrete"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp">
                <TextView
                    android:id="@+id/view_03"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="数量"
                    android:textColor="@color/textColorDrak"/>
                <EditText
                    android:inputType="number"
                    android:id="@+id/num_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_03"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:hint="请输入物品数量"
                    android:textColorHint="@color/hint_color"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/concrete"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp">
                <TextView
                    android:id="@+id/view_04"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="佣金/元"
                    android:textColor="@color/textColorDrak"/>
                <EditText
                    android:inputType="number"
                    android:id="@+id/money_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_04"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:hint="请输入佣金金额"
                    android:textColorHint="@color/hint_color"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务目的"
                        android:textColor="@color/textColorDrak"/>
                    <TextView
                        android:id="@+id/mudi_zishu_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/200"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/concrete"/>
                <EditText
                    android:id="@+id/task_mudi_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="start"
                    android:hint="请输入任务目的"
                    android:textColorHint="@color/hint_color"
                    android:textSize="14sp"
                    android:minLines="5"
                    android:maxLength="200"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/transport_time_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:padding="15dp">
                <TextView
                    android:id="@+id/view_05"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="送达时间"
                    android:textColor="@color/textColorDrak"/>
                <TextView
                    android:id="@+id/validity_songda_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请选择送达时间"
                    android:textSize="14sp"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/hint_color"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/view_05"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more_iv"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/concrete"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp">
                <TextView
                    android:id="@+id/view_06"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="任务有效期/天"
                    android:textColor="@color/textColorDrak"/>
                <EditText
                    android:inputType="number"
                    android:id="@+id/validity_time_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入有效期"
                    android:textSize="14sp"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/hint_color"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/view_06"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more_iv"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:padding="15dp">
                <TextView
                    android:id="@+id/view_07"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="开始地址"
                    android:textColor="@color/textColorDrak"/>
                <TextView
                    android:layout_marginRight="50dp"
                    android:id="@+id/start_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择取货地址"
                    android:textColor="@color/hint_color"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/view_07"/>
                <TextView
                    android:id="@+id/del_start_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/concrete"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp">
                <TextView
                    android:id="@+id/view_08"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="目的地址"
                    android:textColor="@color/textColorDrak"/>
                <TextView
                    android:id="@+id/end_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择目的地地址"
                    android:textColor="@color/hint_color"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/view_08"/>
            </RelativeLayout>
            <!--未修改的标签-->
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标签"
                        android:textColor="@color/textColorDrak"/>
                    <TextView
                        android:id="@+id/add_biaoqian_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加"
                        android:textColor="@color/colorPrimary"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/concrete"/>
                <EditText
                    android:id="@+id/biaoqian_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dip"
                    android:gravity="start"
                    android:hint="请输入2-4个文字标签"
                    android:textColorHint="@color/hint_color"
                    android:textSize="14sp"
                    android:maxLength="4"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/concrete"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"/>
                <RelativeLayout

                    android:id="@+id/relative_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">
                    <TextView
                        android:id="@+id/del_biaoqian_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除"
                        android:paddingLeft="10dp"
                        android:textColor="@color/hint_color"
                        android:layout_alignParentRight="true"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/biaoqian_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/del_biaoqian_tv"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="标签"
                    android:padding="15dp"
                    android:textColor="@color/textColorDrak"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/concrete"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/newbiaoqian_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/add_newbiaoqian_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加要求"
                    android:background="@color/picton_blue"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
