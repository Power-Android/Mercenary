<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color">


    <include layout="@layout/title_view"/>


    <LinearLayout
        android:id="@+id/tuijian_tab_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/renwutj_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/renwutj_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="任务"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <View
                android:id="@+id/indicator_renwutj"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tongcheng_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tongcheng_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="私聊"
                    android:textColor="@color/textColor"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <View
                android:id="@+id/indicator_tongcheng"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/jiuguan_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/jiuguan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="酒馆"
                    android:textColor="@color/textColor"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <View
                android:id="@+id/indicator_jiuguan"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/siliao_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/siliao_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="系统消息"
                    android:textColor="@color/textColor"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <View
                android:id="@+id/indicator_siliao"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="2dp" />
        </LinearLayout>

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/frag_message_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>