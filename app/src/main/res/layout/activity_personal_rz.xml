<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/bg_color"
              android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_2x"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人实名认证"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/ll_sfzh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="身份证号"
            />

            <EditText
                android:paddingRight="15dip"
                android:background="@null"
                android:id="@+id/edt_idcard_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="请输入身份证号码"
                android:layout_centerVertical="true"
                />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="上传身份证照片"
            android:layout_centerVertical="true"
            />

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <LinearLayout
             android:id="@+id/layout_up"
             android:layout_width="match_parent"
             android:layout_height="180dp"
             android:background="#FFEDEDED"
             android:gravity="center"
             android:layout_margin="10dp"
             android:layout_marginTop="10dp"
             android:orientation="vertical">

             <ImageView
                 android:layout_width="60dp"
                 android:layout_height="60dp"
                 android:src="@drawable/sctp_2x"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="12sp"
                 android:layout_marginTop="10dp"
                 android:text="请上传身份证正面照"/>

         </LinearLayout>
         <ImageView
             android:scaleType="fitXY"
             android:id="@+id/img_Id_Card"
             android:layout_width="match_parent"
             android:layout_height="180dp"
             android:gravity="center"
             android:layout_margin="10dp"
             android:layout_marginTop="10dp" />
     </RelativeLayout>



    </LinearLayout>


    <TextView
        android:id="@+id/tv_scz_pz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="手持身份证拍照"
        android:background="@drawable/selector_lanse"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"/>


</LinearLayout>
