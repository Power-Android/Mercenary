<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/bg_color"
              android:orientation="vertical"
              android:layout_height="match_parent">


    <include layout="@layout/title_view"/>

    <ImageView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/yongbing_icon"/>


    <LinearLayout
        android:id="@+id/tuijian_tab_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/include"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/renwutj_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/renwutj_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="验证码登录"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/concrete"/>
            </RelativeLayout>

            <View
                android:id="@+id/indicator_renwutj"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tongcheng_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tongcheng_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="密码登录"
                    android:textColor="@color/textColor"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <View
                android:id="@+id/indicator_tongcheng"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>
    </LinearLayout>
    <!--密码登录-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/pass_login"
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/sj_2x"/>

                <EditText
                    android:id="@+id/edt_pass_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入手机号"
                    android:textSize="14sp"
                    android:maxLength="11"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFF5F5F5"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mm_2x"/>

                <EditText
                    android:id="@+id/et_sign_mm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="请输入密码"
                    android:textSize="14sp"
                    android:password="true"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    />

                <ImageView
                    android:id="@+id/iv_dl_yj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/by_2x"
                    />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_mm_wjmm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="#999"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"/>

    </LinearLayout>
    <!--验证码登录-->
    <LinearLayout
        android:id="@+id/code_login"
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/sj_2x"/>

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入手机号"
                    android:textSize="14sp"
                    android:maxLength="11"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFF5F5F5"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mm_2x"/>

                <EditText
                    android:id="@+id/edt_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="请输入验证码"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    />

                <TextView
                    android:id="@+id/tv_hqyzm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textSize="14sp"
                    />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_yzm_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="#999"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_dl_wc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:background="@drawable/selector_lanse"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:paddingTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="15dp"/>


    <TextView
        android:id="@+id/tv_cjzh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="创建账号"/>


</LinearLayout>
