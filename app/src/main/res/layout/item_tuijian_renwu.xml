<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/item_layout_click"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:clickable="false"
            android:id="@+id/item_title_tv"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorDrak"/>
        <TextView
            android:clickable="false"
            android:id="@+id/item_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pro_content"
            android:layout_alignParentRight="true"/>
    </LinearLayout>

    <TextView
        android:clickable="false"
        android:id="@+id/item_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:ellipsize="end"/>
    <android.support.v7.widget.RecyclerView
        android:clickable="false"
        android:id="@+id/tag_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/concrete"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"/>
</LinearLayout>