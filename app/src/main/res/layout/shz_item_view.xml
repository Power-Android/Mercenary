<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_height="wrap_content"
    android:id="@+id/item_shz_view_layout">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_wjd_view_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="抓娃娃机"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_wjd_view_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.00"
                android:gravity="right"
                android:textColor="#FFFFC910"
                android:textSize="18sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_wjd_view_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="包同城搬运"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_wjd_view_recyclerView"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="5dip"
            android:visibility="gone"
            android:id="@+id/layout_yanqi"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#666"
                    android:singleLine="true"
                    android:text="延期原因："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_cause"
                    android:textColor="#666"
                    android:singleLine="true"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#666"
                    android:singleLine="true"
                    android:text="延期天数："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_days"
                    android:textColor="#666"
                    android:singleLine="true"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#666"
                    android:singleLine="true"
                    android:text="延期至"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_yanqi_time"
                    android:textColor="#666"
                    android:singleLine="true"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_all_price"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="5dip"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:text="支付平台手续费："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_fbpt_price"
                    android:text="6元:"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:text="平台手续费："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_pt_price"
                    android:text="6元:"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dip"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:text="接受者："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_js_price"
                    android:text="6元:"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:text="发布者："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_fb_price"
                    android:text="6元:"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="10dip"
                android:id="@+id/tv_jujue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:padding="5dp"
                android:background="@drawable/shape_hk_jx"
                android:text="拒绝"/>

            <TextView
                android:layout_marginRight="10dip"
                android:id="@+id/tv_shenhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:padding="5dp"
                android:background="@drawable/shape_hk_jx"
                android:text="审核通过"/>
            <TextView
                android:layout_marginRight="10dip"
                android:id="@+id/tv_yanqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:padding="5dp"
                android:background="@drawable/shape_hk_jx"
                android:text="延期处理"/>
            </LinearLayout>

        </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/bg_color"
        />

</LinearLayout>
