<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dip"
    android:paddingRight="30dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_white_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:gravity="center"
                android:text="延期原因"
                android:textColor="#333"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="40dip"
                android:paddingRight="40dip">

                <EditText
                    android:id="@+id/edt_cause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tuoyuan"
                    android:gravity="left"
                    android:hint="请填写延期原因"
                    android:padding="5dip"
                    android:textSize="14dip" />

                <RelativeLayout
                    android:id="@+id/rl_wdtg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginTop="15dip"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dip"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/tv_show_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="请选择延期天数"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_fh" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog"
                        android:dropDownHorizontalOffset="50dp"
                        android:dropDownVerticalOffset="-50dp"
                        android:id="@+id/yanqi_spinner"
                        android:entries="@array/day"
                        ></Spinner>
                </RelativeLayout>
                <!--            <android.support.v7.widget.RecyclerView
                                android:id="@+id/time_recycler"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"

                                />-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#eee"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sure"
                    android:layout_width="0dip"
                    android:layout_height="60dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="#333"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="#eee"></View>

                <TextView
                    android:id="@+id/tv_cancle"
                    android:layout_width="0dip"
                    android:layout_height="60dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#333"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>