<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dip"
    android:paddingRight="30dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_white_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="延期原因"
            android:textColor="#333"
            android:textSize="18sp" />
        <LinearLayout
            android:paddingRight="40dip"
            android:gravity="center_vertical"
            android:paddingLeft="40dip"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:padding="5dip"
                android:gravity="left"
                android:id="@+id/edt_cause"
                android:background="@drawable/tuoyuan"
                android:textSize="14dip"
                android:hint="请填写延期原因"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:paddingLeft="5dip"
                android:id="@+id/rl_wdtg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv_show_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择延期天数"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_fh" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/time_recycler"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#eee"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="#333"
                android:textSize="14sp" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#eee"></View>

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#333"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>