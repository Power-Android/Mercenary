<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="#FFE5E5E5"
                android:centerY="0.75"
                android:endColor="#FFE5E5E5"
                android:startColor="#FFE5E5E5" />
            
            <stroke android:width="0.5dp"
                android:color="@color/pro_kuang"/>
            
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
				
                <gradient
                    android:angle="270"
                    android:centerColor="#80C07AB8"
                    android:centerY="0.75"
                    android:endColor="#a0C07AB8"
                    android:startColor="#80C07AB8" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%"     
       	 >
            
            <shape>
                <corners 
                    android:topLeftRadius="15dp"
                    android:bottomLeftRadius="15dp"
                    android:topRightRadius="20dip"
                    android:bottomRightRadius="20dp" />
				
                <gradient
                    android:angle="270"
                    android:centerColor="@color/pro_content"
                    android:centerY="0.75"
                    android:endColor="@color/pro_content"
                    android:startColor="@color/pro_content" />
            </shape>
            
        </scale>
            
    </item>

</layer-list>
 
 