<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
    package="com.power.mercenary">


    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon, android:label,android:theme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.SetupActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.HelpActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.AboutUsActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.SecurityActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.ModifyPhoneActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.ModifyEmailActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.ModifyPasswordActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.ProblemFeedbackActivity" android:screenOrientation="portrait" ></activity>
        <activity android:name=".activity.ModifyNameActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.MyFollowActivity" android:screenOrientation="portrait"></activity>
    </application>

</manifest>